<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.diemdanhsv.controllers.AttendanceController">
    <children>
        <!-- Form Inputs -->
        <VBox spacing="10" layoutX="10" layoutY="10" prefWidth="200">
            <children>
                <TextField fx:id="idField" promptText="Student ID"/>
                <TextField fx:id="nameField" promptText="Student Name"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <TextField fx:id="userIdField" promptText="User ID"/>
                <Button text="Add" onAction="#add"/>
                <Button text="Remove" onAction="#remove"/>
            </children>
        </VBox>

        <!-- Table View -->
        <TableView fx:id="attendanceTable" layoutX="220" layoutY="10" prefWidth="550" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
