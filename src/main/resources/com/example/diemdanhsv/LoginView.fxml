<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="268.0" prefWidth="468.0" spacing="15" styleClass="login-container" stylesheets="@LoginView.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diemdanhsv.controllers.LoginController">

    <Label styleClass="login-title" text="Đăng nhập" />

    <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Tên đăng nhập" styleClass="login-input" />

    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="300.0" promptText="Mật khẩu" styleClass="login-input" />

    <Button alignment="CENTER" onAction="#handleLogin" prefHeight="35.0" prefWidth="110.0" styleClass="login-button" text="Đăng nhập" />

    <Label fx:id="messageLabel" styleClass="login-message" />
</VBox>
