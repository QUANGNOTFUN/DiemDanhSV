<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diemdanhsv.controllers.AttendanceController">
    <children>
        <!-- Form Inputs -->
        <VBox layoutX="10" layoutY="10" prefWidth="200" spacing="10">
            <children>
                <Label text="MÃ´n:" />
                <ComboBox fx:id="courseComboBox" prefWidth="150.0" />
                <TextField fx:id="idField" promptText="Student ID" />
                <TextField fx:id="nameField" promptText="Student Name" />
                <TextField fx:id="emailField" promptText="Email" />
                <TextField fx:id="userIdField" promptText="User ID" />
                <Button onAction="#add" text="Add" />
                <Button onAction="#remove" text="Remove" />
            </children>
        </VBox>

        <!-- Table View -->
        <TableView fx:id="attendanceTable" layoutX="220" layoutY="10" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name" />
                <TableColumn fx:id="genderColumn" prefWidth="150.0" text="Gender" />
                <TableColumn fx:id="dateColumn" prefWidth="90.0" text="Date" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
