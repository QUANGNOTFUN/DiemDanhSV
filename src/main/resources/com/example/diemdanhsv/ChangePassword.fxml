<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.diemdanhsv.controllers.ChangePasswordController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Đổi Mật Khẩu" style="-fx-font-size: 20px;"/>
    
    <PasswordField fx:id="currentPasswordField" promptText="Mật khẩu hiện tại"/>
    <PasswordField fx:id="newPasswordField" promptText="Mật khẩu mới"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu mới"/>
    
    <Label fx:id="messageLabel" textFill="RED"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Xác nhận" onAction="#handleChangePassword"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>